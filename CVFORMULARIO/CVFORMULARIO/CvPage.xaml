<!-- CvPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CVFORMULARIO.CvPage">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="30">
            <Label x:Name="nombreLabel"/>
            <Label x:Name="experienciaLabel"/>
            <Label x:Name="idiomaLabel"/>
            <Label x:Name="aptitudLabel"/>
            <Label x:Name="habilidadLabel"/>
            <Label x:Name="interesLabel"/>
            <!-- Más Labels para otros campos -->
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
